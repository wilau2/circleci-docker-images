{
  "name": "docker-image-builder-cli",
  "version": "0.0.1",
  "bin": {
    "dockerium": "./bin/dockerium.js"
  },
  "author": "wilau2 <william.lauze@gmail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "build": "babel --copy-files src --out-dir bin",
    "dockerium": "npm run build && node bin/dockerium.js",
    "cci-tools": "npm run build && node bin/circleci-tools.js",
    "test": "jest src --coverage",
    "test:watch": "jest src --watchAll",
    "docker:build": "docker build -t williamlauze/test ./bin/"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --arrow-parens always --trailing-comma all --single-quote --print-width 100 --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.{js}"],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "moduleDirectories": ["node_modules", "src"],
    "setupFiles": ["./config/jestsetup.js"],
    "clearMocks": true,
    "testRegex": "tests/.*\\.test\\.js$"
  },
  "dependencies": {
    "commander": "^2.15.1",
    "inquirer": "^5.2.0",
    "js-yaml": "^3.11.0",
    "winston": "^3.0.0-rc4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-util-promisify": "^0.2.2",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jest-cli": "^22.4.3",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
